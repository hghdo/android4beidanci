<?xml version="1.0" encoding="utf-8"?>
<resources>

<style name="title">
	<item name="android:textSize">18dip</item>
	<item name="android:layout_marginTop">10dip</item>
	<item name="android:layout_marginBottom">8dip</item>
	<item name="android:layout_marginLeft">15dip</item>
</style>

<style name="units_list_title">
	<item name="android:textSize">16dip</item>
	<item name="android:textColor">@color/white</item>
</style>

<style name="split">
	<item name="android:layout_width">fill_parent</item>
	<item name="android:layout_height">1dip</item>
	<item name="android:background">@color/white</item> 
	<item name="android:layout_marginBottom">15dip</item>
	<item name="android:layout_marginTop">15dip</item>
</style>

<style name="summary_item_value">
	<item name="android:textSize">15dip</item>
</style>


<!-- for common row item -->
<style name="common_row_style">
	<item name="android:paddingTop">8dip</item>
	<item name="android:paddingLeft">5dip</item>
	<item name="android:paddingRight">2dip</item>
	<item name="android:paddingBottom">2dip</item>
	<item name="android:background">@color/default_bg</item>
</style>

<style name="phonetic_symbol">
	<item name="android:textColor">@color/red</item>
</style>


<style name="small_title">
	<item name="android:paddingTop">5dip</item>
	<item name="android:paddingLeft">4dip</item> 
	<item name="android:paddingRight">4dip</item> 
	<item name="android:paddingBottom">1dip</item> 
	<item name="android:layout_marginBottom">3dip</item>
	<item name="android:background">@color/default_bg</item> 
	<item name="android:textColor">@color/white</item>
</style>

<style name="headword">
	<item name="android:textSize">23dip</item>
</style>

<style name="test_title" parent="android:WindowTitle">
    <item name="android:textColor">#FFFDB900</item>
</style>

<style name="button_bar">
	<item name="android:background">@color/grey</item>
	<item name="android:paddingTop">5dip</item>
</style>

<style name="image_button">
	<item name="android:layout_width">wrap_content</item>
	<item name="android:layout_height">wrap_content</item>
	<item name="android:padding">2dip</item>
	<item name="android:scaleType">center</item>
	<item name="android:layout_weight">1</item>
</style>
</resources>
